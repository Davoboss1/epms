<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" style="-fx-background-color: white;" vbarPolicy="ALWAYS" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.formController">
   <content>
      <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="700.0" minWidth="400.0" prefHeight="599.0" prefWidth="400.0" style="-fx-background-color: white;">
         <children>
            <Label maxWidth="300.0" text="Patient ID">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="PatientID" maxWidth="300.0" prefHeight="40.0" promptText="ID" styleClass="customInput" stylesheets="@style.css">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </TextField>
            <Label maxWidth="300.0" text="Patient Name">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="PatientName" maxWidth="300.0" prefHeight="40.0" promptText="Name" styleClass="customInput" stylesheets="@style.css">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </TextField>
            <Label maxWidth="300.0" text="Patient Address">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="PatientAddress" maxWidth="300.0" prefHeight="40.0" promptText="Address" styleClass="customInput" stylesheets="@style.css">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </TextField>
            <Label maxWidth="300.0" text="Patient Sex">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="PatientSex" prefHeight="40.0" prefWidth="300.0" promptText="Sex" styleClass="customInput" stylesheets="@style.css">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </ComboBox>
            <Label maxWidth="300.0" text="Patient Age">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="PatientAge" maxWidth="300.0" prefHeight="40.0" promptText="Age" styleClass="customInput" stylesheets="@style.css">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </TextField>
            <Label maxWidth="300.0" text="Date Admitted">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <DatePicker fx:id="PatientDateAdmitted" prefHeight="40.0" prefWidth="300.0" styleClass="customInput" stylesheets="@style.css">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </DatePicker>
            <Label maxWidth="300.0" text="Ailment/Condition">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="PatientCondition" maxWidth="300.0" prefHeight="40.0" promptText="Malaria" styleClass="customInput" stylesheets="@style.css">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#submitPatientData" prefWidth="300.0" style="-fx-text-fill: white; -fx-background-color: #00c853;" styleClass="cbutton" stylesheets="@style.css" text="Submit">
               <VBox.margin>
                  <Insets bottom="10.0" top="15.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </content>
</ScrollPane>
